<Window x:Class="oopLab1WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:oopLab1WPF"
        Title="Fast Food Monitoring System" 
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:BooleanToColorConverter x:Key="BooleanToColorConverter" 
                                      TrueColor="Green" FalseColor="Red"/>

        <local:BooleanToTextConverter x:Key="BooleanToTextConverter" 
                                     TrueText="Работает" FalseText="Свободен"/>

        <Style x:Key="WorkerCardStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#FFF5F5F5"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="40,20"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FFE8F4FD" BorderBrush="#FFBBDEFB" 
                BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,0,10">
            <Grid HorizontalAlignment="Left">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition   Width="*"/>
                    <ColumnDefinition   Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBox MinWidth="150" Margin="15" MaxWidth="150">
                </TextBox>
                <Button HorizontalAlignment="Left"
                    Grid.Column="1"
                        Content="Start" 
                        Command="{Binding StartCommand}"
                        Style="{StaticResource ActionButtonStyle}"
                        Background="#FF4CAF50" Foreground="White"/>
                <StackPanel 
                    Grid.Row="1" Grid.Column="1"
                    Orientation="Horizontal">
                    <Button 
                        Content="Start" 
                        Command="{Binding StartCommand}"
                        Style="{StaticResource ActionButtonStyle}"
                        Background="#FF4CAF50" Foreground="White"/>
                    <Button 
                        Content="Start" 
                        Command="{Binding StartCommand}"
                        Style="{StaticResource ActionButtonStyle}"
                        Background="#FF4CAF50" Foreground="White"/>
                    <Button 
                        Content="Start" 
                        Command="{Binding StartCommand}"
                        Style="{StaticResource ActionButtonStyle}"
                        Background="#FF4CAF50" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="#FFF3E5F5" BorderBrush="#FFE1BEE7" 
                BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           FontWeight="Bold" 
                           Margin="0,0,10,0" 
                           VerticalAlignment="Center">
                   <Run Text="Клиентов: "/>
                   <Run Text="{Binding Customers}"/>
                </TextBlock>

            </Grid>
        </Border>

        <GroupBox Grid.Row="3" Header="Кухня" FontSize="14" FontWeight="Bold" 
                  BorderBrush="#FF4CAF50" BorderThickness="2" Margin="0,0,0,5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding KitchenWorkers}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource WorkerCardStyle}">
                                <StackPanel Orientation="Vertical" Width="120">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Ellipse Width="12" Height="12" Margin="0,0,5,0">
                                            <Ellipse.Fill>
                                                <Binding Path="IsWorking" Converter="{StaticResource BooleanToColorConverter}"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <TextBlock Text="{Binding IsWorking, Converter={StaticResource BooleanToTextConverter}}"
                                                   FontWeight="Bold"/>
                                    </StackPanel>

                                    <TextBlock Text="Повар" HorizontalAlignment="Center" 
                                               Margin="0,5,0,0" FontSize="10" Foreground="Gray"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>

        <!-- Серверы -->
        <GroupBox Grid.Row="4" Header="Оффицианты" FontSize="14" FontWeight="Bold" 
                  BorderBrush="#FF2196F3" BorderThickness="2" Margin="0,0,0,5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding ServerWorkers}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource WorkerCardStyle}">
                                <StackPanel Orientation="Vertical" Width="120">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Ellipse Width="12" Height="12" Margin="0,0,5,0">
                                            <Ellipse.Fill>
                                                <Binding Path="IsWorking" Converter="{StaticResource BooleanToColorConverter}"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <TextBlock Text="{Binding IsWorking, Converter={StaticResource BooleanToTextConverter}}"
                                                   FontWeight="Bold"/>
                                    </StackPanel>
                                    <TextBlock Text="Оффициант" HorizontalAlignment="Center" 
                                               Margin="0,5,0,0" FontSize="10" Foreground="Gray"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="Принимающие заказы" FontSize="14" FontWeight="Bold" 
                  BorderBrush="#FFFF9800" BorderThickness="2">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding TakerWorkers}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource WorkerCardStyle}">
                                <StackPanel Orientation="Vertical" Width="120">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Ellipse Width="12" Height="12" Margin="0,0,5,0">
                                            <Ellipse.Fill>
                                                <Binding Path="IsWorking" Converter="{StaticResource BooleanToColorConverter}"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <TextBlock Text="{Binding IsWorking, Converter={StaticResource BooleanToTextConverter}}"
                                                   FontWeight="Bold"/>
                                    </StackPanel>
                                    <TextBlock Text="Кассир" HorizontalAlignment="Center" 
                                               Margin="0,5,0,0" FontSize="10" Foreground="Gray"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>